{
  "compilerOptions": {
    "baseUrl": "./src",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "build",
    "strict": true,
    "target": "es2020"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"],
}
